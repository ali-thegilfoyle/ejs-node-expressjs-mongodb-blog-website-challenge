<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="postTitle" id="" class="form-control" />
    <label for="">Post</label>
    <textarea
      multiple
      name="postBody"
      class="form-control"
      id=""
      rows="5"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

